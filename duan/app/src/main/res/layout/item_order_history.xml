<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    app:strokeColor="@color/gray_border"
    app:strokeWidth="1dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#ABC12345"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                app:chipBackgroundColor="@color/purple_button"
                app:chipCornerRadius="16dp"
                app:chipMinHeight="32dp"
                app:chipIcon="@android:drawable/ic_menu_info_details"
                app:chipIconTint="@color/white"
                app:closeIconEnabled="false" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Đang giao"
                app:chipCornerRadius="16dp"
                app:chipMinHeight="32dp"
                app:chipStrokeColor="@color/gray_border"
                app:chipStrokeWidth="0dp"
                app:closeIconEnabled="false" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_product_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="iPhone 13 · 3 mặt hàng khác"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginTop="6dp" />

        <TextView
            android:id="@+id/tv_total_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tổng: 2.000.000đ"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/blue_text"
            android:layout_marginTop="6dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_border"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/tv_order_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ngày đặt: 12/10/2025"
            android:textSize="12sp"
            android:textColor="@color/dark_gray"
            android:layout_marginTop="6dp"
            android:drawableLeft="@android:drawable/ic_menu_today"
            android:drawablePadding="6dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_quick_action"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:text="Chi tiết đơn hàng"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:backgroundTint="@color/black"
            app:cornerRadius="24dp"
            android:layout_marginTop="12dp"
            android:drawableLeft="@android:drawable/ic_menu_info_details"
            android:drawablePadding="8dp" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
